{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2018",
        "moduleResolution": "Node",
        "outDir": "../dist/server",
        "esModuleInterop": true,
        "incremental": true,
        "sourceMap": true,
        "allowUmdGlobalAccess": false,
        "lib": [
            "ES2020"
        ],
        "types": [
            "express",
            "node",
            "crypto-js",
            "axios"
        ]
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}